/* components/search/index.wxss */

.search-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.search-header {
  background-color: #fff;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  top: 0;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  z-index: 99;
}

.input-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 710rpx;
  height: 68rpx;
  background-color: #f5f5f5;
  margin-left: 20rpx;
  border-radius: 34px;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 24rpx;
  margin-right: 16rpx;
}

.input {
  width: 578rpx;
  height: 68rpx;
}

.placeholder-input {
  color: #999;
}

.cancel-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 16rpx;
  margin-right: 20rpx;
}

.action {
  background-color: rgb(47, 255, 134);
  line-height: 68rpx;
  width: 130rpx;
  text-align: center;
  display: inline-block;
  border-radius: 34rpx;
  margin-left: 10rpx;
}

.action::after {
  border: none
}

.search-keywords {
  margin-top: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.history {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 690rpx;
  margin-top: 60rpx;
  font-size: 28rpx;
}

.hot {
  margin-top: 70rpx;
}

.title {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.delete-img {
  width: 30rpx;
  height: 30rpx;
}

.chunk {
  height: 30rpx;
  width: 10rpx;
  background-color: #000;
  display: inline-block;
  margin-right: 20rpx;
}

.tags {
  width: 690rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 10rpx;
}

.tags v-tag {
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.school-container {
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}

.loading {
  margin: 50rpx 0 50rpx 0;
}

.empty-page {
  margin-top: 211rpx;
}
