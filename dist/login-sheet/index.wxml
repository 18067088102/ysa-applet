<ui-mask show="{{showMask2}}" effect="scale-in" animation="" _pid="{{_pid}}">
  <view class="content content2" data-show="{{ false }}" bindtap="handleShowMask2">
    <view class="login-register-container" style="{{ positionStyle }}">
      <text class="lr-text">登录或注册壹食安</text>
      <view class="lr-register" bindtap="onRegister">
        <text class="r-text">手机号注册</text>
      </view>
      <view class="lr-login" bindtap="onLogin">
        <text class="l-text">立即登录</text>
      </view>
      <view class='login-protocol'>
        <text>使用即为同意</text>
        <text class='tap-text' bindtap='onGetProtocol'>《壹食安服务协议》</text>
        <text>和</text>
        <text class='tap-text' bindtap='onGetProvite'>《隐私政策》</text>
      </view>
    </view>
  </view>
</ui-mask>
