.content1 {
  width: 750rpx;
  height: 220rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f3f3f3;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.img-container {
  position: relative;
}

.head-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}

.camera-status {
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 70rpx;
  height: 24rpx;
  background: rgba(0, 0, 0, 1);
  border-radius: 0 8rpx 0 8rpx;
  opacity: 0.66;
  z-index: 10;
}

.camera-img {
  width: 16rpx;
  height: 10rpx;
  margin-right: 5rpx;
}

.camera-text {
  font-size: 12rpx;
  color: #fff;
}

.content-part {
  width: 510rpx;
  height: 180rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.name-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.name-text {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  width: 510rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.addr-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.addr-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.addr-img {
  width: 20rpx;
  height: 24rpx;
  margin-right: 5rpx;
}

.addr-text {
  font-size: 24rpx;
  color: #666;
  /* width: 380rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 10rpx;
}

.addr-distance {
  font-size: 26rpx;
  color: #666;
}

.star-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.level-text {
  width: 44rpx;
  height: 24rpx;
  border-radius: 4rpx;
  border: 1rpx solid rgba(255, 112, 104, 1);
  font-size: 18rpx;
  color: rgba(255, 112, 104, 1);
  margin: 0 20rpx;
  text-align: center;
}

.level-img {
  width: 24rpx;
  height: 24rpx;
}

.type-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.type-text {
  font-size: 26rpx;
  color: #666;
}

.line {
  width: 1rpx;
  height: 23rpx;
  background-color: #ddd;
  margin: 0 20rpx;
}