/* pages/login/login.wxss */

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.common-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 690rpx;
  height: 88rpx;
  background: rgba(243, 243, 243, 1);
  border-radius: 44rpx;
}

.phone-view {
  margin: 101rpx 30rpx 32rpx;
}

.login-input {
  margin-left: 49rpx;
  width: 590rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #979797;
}

.code-view {
  margin: 0 30rpx 64rpx;
}

.submit-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  height: 88rpx;
  background-color: #00b886;
  border-radius: 44rpx;
  color: #fff;
  font-size: 28rpx;
}

.submit-btn::after {
  border: none;
}

.register-forgetPsw {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.toRegister {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  text-align: right;
}

.line {
  margin: 0 68rpx;
  width: 1rpx;
  height: 29rpx;
  line-height: 29rpx;
  background-color: #979797;
}

.toForgetPsw {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.login-protocol {
  position: fixed;
  bottom: 30rpx;
  font-size: 22rpx;
  color: #666;
}

.tap-text {
  color: #00b886;
}
