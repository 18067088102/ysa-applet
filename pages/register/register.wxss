/* pages/register/register.wxss */

.login-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
}

.common-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 690rpx;
  height: 88rpx;
  background: rgba(243, 243, 243, 1);
  border-radius: 44rpx;
}

.phone-view {
  margin: 101rpx 30rpx 0;
}

.login-input {
  margin-left: 49rpx;
  width: 430rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #979797;
}

.vscode-view {
  margin: 32rpx 30rpx 0;
}

.line {
  margin-left: 9rpx;
  width: 1rpx;
  height: 29rpx;
  background-color: #979797;
}

.vscode-text {
  height: 40rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #00b886;
}

.warn-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 34rpx;
  margin-left: 30rpx;
}

.warn-img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.warn-text {
  height: 37rpx;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 37rpx;
}

.submit-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  height: 88rpx;
  margin-top: 64rpx;
  background-color: #00b886;
  border-radius: 44rpx;
  color: #fff;
  font-size: 28rpx;
}

.submit-btn::after {
  border: none;
}

.login-protocol {
  position: fixed;
  bottom: 30rpx;
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  color: #666;
}

.tap-text {
  color: #00b886;
}
